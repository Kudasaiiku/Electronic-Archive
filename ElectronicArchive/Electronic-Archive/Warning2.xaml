                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.107"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="Вы уверены, что хотите "/><Run Language="ru-ru" Text="удалить эту запись"/><Run Text="?"/></TextBlock>
        <Button x:Name="Yes" Content="Да, завершить" HorizontalAlignment="Left" Margin="195,0,0,40" Width="399" FontFamily="Century Gothic" FontSize="48" FontWeight="Bold" BorderThickness="2,2,2,2" Foreground="#FF7A9E74" Click="Yes_Click" Height="79" VerticalAlignment="Bottom">
