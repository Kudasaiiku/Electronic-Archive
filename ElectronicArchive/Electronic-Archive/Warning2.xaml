                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.107"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Language="ru-ru" Text="Удаление данных"/></TextBlock>
        <TextBlock Margin="0,0,0,155" TextWrapping="Wrap" VerticalAlignment="Bottom" FontFamily="Century Gothic" Height="54" FontSize="45" Foreground="#9A7066" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" HorizontalAlignment="Center" Width="1098" >
