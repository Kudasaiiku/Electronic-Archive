            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF684A43" Opacity="0.5"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="No" Content="Нет, вернуться" Margin="695,0,195,40" FontFamily="Century Gothic" FontSize="48" FontWeight="Bold" BorderThickness="2,2,2,2" Foreground="#FFA65C57" Click="No_Click" Height="79" VerticalAlignment="Bottom">
            <Button.Background>
                <SolidColorBrush Color="#FFFF0101" Opacity="0.13"/>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF684A43" Opacity="0.5"/>
            </Button.BorderBrush>
        </Button>
        <Image Margin="394,0,0,224" Source="/icons8-vosklitsatelny-znak-96_1.png" Stretch="Fill" Height="69" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="68"/>

